
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Nuevo contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Registrar", "Contacto")" method="post" autocomplete="off">
                    <div class="form-group">
                        <label for="txtNombres">Nombres</label>
                        <input type="text" id="txtNombres" name="Nombres" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtApellidos">Apellidos</label>
                        <input type="text" id="txtApellidos" name="Apellidos" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtTelefono">Telefono</label>
                        <input type="text" id="txtTelefono" name="Telefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="txtCorreo">Correo</label>
                        <input type="text" id="txtCorreo" name="Correo" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    @*@Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-warning" })*@
                    <a href="@Url.Action("Index", "Contacto")" class="btn btn-warning">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

